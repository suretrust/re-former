<h1>New user page</h1>

<%= form_tag users_path, method: :post do %>
    <div>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
    </div>
    <div>
        <%= label_tag :username %>
        <%= text_field_tag :username %>
    </div>
    <div>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div>
    <div>
        <%= submit_tag "Create new user" %>
    </div>
<% end %>